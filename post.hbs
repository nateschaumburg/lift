{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
the {body} of the default.hbs template, which contains our header/footer. }}
<!-- featured/cover image -->
<div class="post-wrap">
	{{#post}} {{! Everything inside the #post tags pulls data from the post }}

	<article class="{{post_class}}">
		<div class="content-wrap">
			{{#if feature_image}}
			<figure class="gh-feature-image">
				<img
					srcset="{{img_url feature_image size="s"}} 300w,
							{{img_url feature_image size="m"}} 600w,
							{{img_url feature_image size="l"}} 1000w,
							{{img_url feature_image size="xl"}} 1170w"
					sizes="(max-width: 1000px) 1000px, 1170px"
					loading="lazy"
					src="{{img_url feature_image size="xl"}}"
					alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
				/>
			</figure>
			{{/if}}

			<div class="main-wrap">
				<header class="entry-header">
					<h1 class="entry-title">{{title}}</h1>
				</header><!-- .entry-header -->

				<div class="entry-content">
					{{content}}

					Project Date:<br>
					{{date format="MMMM DD, YYYY"}}

					<div class="gh-tags">
						{{tags  separator="" prefix="Tags: "}}
					</div>
				</div>

				{{#if comments}}
					<section class="article-comments gh-canvas">
						{{comments}}
					</section>
				{{/if}}

				<footer class="entry-footer post-footer">

					<div class="post-footer mb-regular">
						{{#primary_author}}
						<div class="post-author font-smaller d-flex flex-align-center">
							<div class="post-author-bio">
								<p class="font-smaller mb-0">Posted by <a href="{{url}}">{{name}}</a></p>
							</div>
						</div>
						{{/primary_author}}

						<ul class="sharing-buttons">
							<li class="icon-facebook">
								<a target="_blank" href="https://www.facebook.com/sharer.php?u={{url absolute="true"}}">Facebook</a>
							</li>
							<li class="icon-twitter">
								<a target="_blank" href="https://twitter.com/share?text={{title}}&amp;url={{url absolute="true"}}">Twitter</a>
							</li>
						</ul>
					</div>
					
				</footer>
			</div>

		</div><!-- .content-wrapper -->

	</article>

	{{/post}}
</div>